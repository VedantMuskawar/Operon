rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAuthenticated() {
      return request.auth != null;
    }

    function claimOrgId() {
      return isAuthenticated() && request.auth.token.organizationId is string
        ? request.auth.token.organizationId
        : null;
    }

    function claimRole() {
      return isAuthenticated() && request.auth.token.role is number
        ? request.auth.token.role
        : null;
    }

    function isOrgMember(orgId) {
      return claimOrgId() == orgId;
    }

    function isOrgAdmin(orgId) {
      return isOrgMember(orgId) &&
        claimRole() in [0, 1, 2];
    }

    function isOrgManagerOrAbove(orgId) {
      return isOrgMember(orgId) &&
        claimRole() in [0, 1, 2];
    }

    function isDriver(orgId) {
      return isOrgMember(orgId) && claimRole() == 3;
    }

    // Organizations folder structure
    match /organizations/{orgId}/logos/{fileName} {
      allow read: if isOrgMember(orgId);
      allow write: if isOrgAdmin(orgId);
    }

    match /organizations/{orgId}/documents/{fileName} {
      allow read: if isOrgMember(orgId);
      allow write: if isOrgAdmin(orgId);
    }

    match /organizations/{orgId}/attachments/{fileName} {
      allow read: if isOrgMember(orgId);
      allow write: if isOrgAdmin(orgId);
    }

    match /organizations/{orgId}/sch_orders/{scheduleId}/delivery/{fileName} {
      allow read, write: if isAuthenticated();
    }

    // Users folder structure
    match /users/{userId}/profile_photos/{fileName} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId}/documents/{fileName} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId}/attachments/{fileName} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // System folder for shared resources
    match /system/templates/{fileName} {
      allow read: if isAuthenticated();
      allow write: if false; // Only system can write
    }

    match /system/assets/{fileName} {
      allow read: if isAuthenticated();
      allow write: if false; // Only system can write
    }
  }
}
