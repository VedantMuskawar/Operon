rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Organizations folder structure
    match /organizations/{orgId}/logos/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    match /organizations/{orgId}/documents/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    match /organizations/{orgId}/attachments/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Users folder structure
    match /users/{userId}/profile_photos/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId}/documents/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId}/attachments/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // System folder for shared resources
    match /system/templates/{fileName} {
      allow read: if request.auth != null;
      allow write: if false; // Only system can write
    }
    
    match /system/assets/{fileName} {
      allow read: if request.auth != null;
      allow write: if false; // Only system can write
    }
  }
}
